<?xml version="1.0" encoding="UTF-8"?>

<!-- XTSL test caller script for the KafkaMap. -->

<tsl>

    <message name="kafkamap">
        <map object="com.dexels.navajo.enterprise.kafkamap.adapter.KafkaMap">            
            <field name="sendThrough">
                <expression value="true"/>
            </field>

            <field name="propertyName">
                <expression value="'/added/prop'"/>
            </field>

            <field name="propertyType">
                <expression value="'string'"/>
            </field>

            <field name="property">
                <expression value="'tsl-based'"/>
            </field>
            
            <field name="doPost">
                <expression value="'KafkaMap/KafkaMapCallee'"/>
            </field>
        </map>

        <map object="com.dexels.navajo.enterprise.kafkamap.adapter.KafkaMap">            
            <field name="sendThrough">
                <expression value="true"/>
            </field>

            <field name="resource">
                <expression value="'myself'"/>
            </field>

            <field name="propertyName">
                <expression value="'/added/prop'"/>
            </field>

            <field name="propertyType">
                <expression value="'string'"/>
            </field>

            <field name="property">
                <expression value="'tsl-based'"/>
            </field>
            
            <field name="doPost">
                <expression value="'KafkaMap/KafkaMapCallee'"/>
            </field>
        </map>

        <map object="com.dexels.navajo.enterprise.kafkamap.adapter.KafkaMap">            
            <field name="sendThrough">
                <expression value="true"/>
            </field>

            <field name="server">
                <expression value="'http://localhost:9090/navajo'"/>
            </field>

            <field name="propertyName">
                <expression value="'/added/prop'"/>
            </field>

            <field name="propertyType">
                <expression value="'string'"/>
            </field>

            <field name="property">
                <expression value="'tsl-based'"/>
            </field>
            
            <field name="doPost">
                <expression value="'KafkaMap/KafkaMapCallee'"/>
            </field>
        </map>

        <property name="response" type="string" value="OK" direction="out" />
    </message>

    <methods>
        <method name="KafkaMap/InitKafkaMapCaller"/>
    </methods>

</tsl>
