<?xml version="1.0" encoding="UTF-8"?>

<!-- Navascript test caller script for the KafkaMap. -->

<navascript>

    <message name="kafkamap">    
        <message name="wholeDocument">
            <property name="wholeDocument" type="boolean" value="true" direction="out" />

            <map.kafkamap>
                <kafkamap.post key="'my-key-ns'" topic="'my-topic-ns'" />
    
                <property name="response" type="string" direction="out">
                    <expression value="$response" />
                </property>
            </map.kafkamap>
        </message>
        
        <message name="rootMessage">
            <property name="wholeDocument" type="boolean" value="false" direction="out" />
            
            <map.kafkamap>
                <kafkamap.post wholeDocument="false" key="'my-key-ns'" topic="'my-topic-ns'" />
    
                <property name="response" type="string" direction="out">
                    <expression value="$response" />
                </property>
            </map.kafkamap>
        </message>
    </message>

    <methods>
        <method name="KafkaMap/InitKafkaMapCaller"/>
    </methods>

</navascript>
